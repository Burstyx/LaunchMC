{
  "name": "rubycli",
  "version": "0.0.2-A",
  "description": "Ruby Client, Minecraft launcher for all your vanilla/modded versions",
  "main": "src/electron.js",
  "scripts": {
    "build-js": "npx tsc",
    "run": "npm run build-js && electron .",
    "start sass watcher": "npx sass --watch ./src/style.scss ./src/style.css",
    "windows build": "electron-builder build --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItsBursty/BurstyLauncher.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ItsBursty/BurstyLauncher/issues"
  },
  "homepage": "https://github.com/ItsBursty/BurstyLauncher#readme",
  "devDependencies": {
    "@types/adm-zip": "^0.5.4",
    "@types/color": "^3.0.6",
    "@types/discord-rpc": "^4.0.8",
    "@types/node-7z": "^2.1.8",
    "@types/semver": "^7.5.5",
    "@types/uuid": "^9.0.7",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "adm-zip": "^0.5.10",
    "color": "^4.2.3",
    "discord-rpc": "^4.0.1",
    "fs-extra": "^11.1.1",
    "semver": "^7.5.4",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "fr.burstyx.burstyxlauncher",
    "productName": "Ruby Client",
    "copyright": "All Rights Reserved",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": ""
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "",
      "uninstallerIcon": "",
      "artifactName": "${productName}-${version}-installer.${ext}",
      "deleteAppDataOnUninstall": true
    }
  }
}
