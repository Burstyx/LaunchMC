{
  "name": "launchmc",
  "version": "0.1.2-A",
  "description": "Join your favorite Minecraft server or just play Minecraft.",
  "main": "src/electron.js",
  "scripts": {
    "build-js": "npx tsc",
    "run": "npm run build-js && electron .",
    "start sass watcher": "npx sass --watch ./src/style.scss ./src/style.css",
    "windows build": "npm run build-js && electron-builder build --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItsBursty/BurstyLauncher.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ItsBursty/BurstyLauncher/issues"
  },
  "homepage": "https://github.com/ItsBursty/BurstyLauncher#readme",
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/checksum": "^0.1.35",
    "@types/color": "^3.0.6",
    "@types/discord-rpc": "^4.0.8",
    "@types/node-7z": "^2.1.8",
    "@types/semver": "^7.5.6",
    "@types/uuid": "^9.0.7",
    "@types/is-url": "^1.2.32",
    "electron": "28.1.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.1",
    "adm-zip": "^0.5.10",
    "checksum": "^1.0.0",
    "discord-rpc": "^4.0.1",
    "fs-extra": "^11.2.0",
    "is-url": "^1.2.4",
    "semver": "^7.5.4",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "fr.burstyx.burstyxlauncher",
    "productName": "LaunchMC",
    "copyright": "All Rights Reserved",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./src/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "",
      "uninstallerIcon": "",
      "artifactName": "${productName}-${version}-installer.${ext}",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": false
    }
  }
}
